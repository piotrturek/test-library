<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>

  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Adres email', class: 'form-control' %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'HasÅ‚o', class: 'form-control' %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Zaloguj", class: 'btn btn-lg btn-primary btn-block' %>
  </div><br/><br/>

  <%= render "devise/shared/links" %>
<% end %>


